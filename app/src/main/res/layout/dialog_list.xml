<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popwindow_bg">

    <LinearLayout
        android:id="@+id/common_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_dialog_title_bg" >

        <TextView
            android:id="@+id/dialog_list_tvTitle"
            style="@style/text_white_20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/dialog_list_listView"
        style="@style/text_black_15"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/shape_line"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:listSelector="@drawable/list_selector" />
	<LinearLayout
	     android:id="@+id/dialog_list_layout"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="vertical" >
	    
	</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"  >

        <Button
            android:id="@+id/btnSure"
            style="@style/btn_style"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="确定" />

        <Button
            android:id="@+id/btnCancle"
            style="@style/btn_style"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>